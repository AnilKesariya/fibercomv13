        <menuitem
            id="menu_warehouse_report_user"
            name="Reporting"
            sequence="99"
            parent="stock.menu_stock_root"
            groups="group_fcom_inv_user"/>

        <menuitem
            id="menu_valuation_inv_user"
            name="Inventory Report"
            parent="menu_warehouse_report_user"
